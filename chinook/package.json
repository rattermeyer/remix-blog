{
	"name": "chinook",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"antora:generate": "antora generate antora-playbook.yml",
		"build": "yarn antora:generate && remix vite:build",
		"dev": "remix vite:dev",
		"eslint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
		"lint:staged": "biome check --error-on-warnings --no-errors-on-unmatched --staged",
		"lint": "tsc --noEmit -p tsconfig.json && biome lint --diagnostic-level=error --no-errors-on-unmatched",
		"start": "remix-serve ./build/server/index.js",
		"typecheck": "tsc",
		"test": "vitest run --run",
		"test:watch": "vitest",
		"test:coverage": "vitest --coverage",
		"test:e2e": "playwright test --config playwright.config.ts"
	},
	"dependencies": {
		"@asciidoctor/core": "^3.0.4",
		"@hookform/resolvers": "^3.9.0",
		"@mantine/core": "^7.11.2",
		"@mantine/dates": "^7.11.2",
		"@mantine/hooks": "^7.11.2",
		"@mantine/notifications": "^7.11.2",
		"@remix-run/node": "^2.10.3",
		"@remix-run/react": "^2.10.3",
		"@remix-run/serve": "^2.10.3",
		"@tabler/icons-react": "^3.11.0",
		"clsx": "^2.1.1",
		"dayjs": "^1.11.12",
		"drizzle-orm": "^0.32.0",
		"drizzle-zod": "^0.5.1",
		"isbot": "^4.1.0",
		"mantine-react-table": "^2.0.0-beta.6",
		"pg": "^8.12.0",
		"react": "^18.3.0",
		"react-dom": "^18.3.0",
		"react-hook-form": "^7.52.1",
		"remix-hook-form": "^5.0.1",
		"remix-utils": "^7.6.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@antora/lunr-extension": "^1.0.0-alpha.8",
		"@biomejs/biome": "1.8.3",
		"@playwright/test": "^1.45.3",
		"@remix-run/dev": "^2.10.3",
		"@remix-run/testing": "^2.10.3",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.4.8",
		"@testing-library/react": "^16.0.0",
		"@testing-library/user-event": "^14.5.2",
		"@types/node": "^20.14.12",
		"@types/pg": "^8.11.6",
		"@types/react": "^18.2.20",
		"@types/react-dom": "^18.2.7",
		"@typescript-eslint/eslint-plugin": "^6.7.4",
		"@typescript-eslint/parser": "^6.7.4",
		"@vitest/coverage-v8": "^2.0.4",
		"antora": "3.1.9",
		"asciidoctor-kroki": "^0.18.1",
		"autoprefixer": "^10.4.19",
		"drizzle-kit": "^0.22.8",
		"eslint": "^8.38.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"jsdom": "^24.1.1",
		"postcss": "^8.4.39",
		"postcss-preset-mantine": "^1.17.0",
		"postcss-simple-vars": "^7.0.1",
		"tailwindcss": "^3.4.4",
		"typescript": "^5.1.6",
		"vite": "^5.1.0",
		"vite-tsconfig-paths": "^4.2.1",
		"vitest": "^2.0.4"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"packageManager": "yarn@4.3.1"
}
